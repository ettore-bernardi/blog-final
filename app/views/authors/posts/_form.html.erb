<%= form_with(model: post) do |form| %>


  <div class="field mb-4">
    <%= form.label :title, class:'mb-2' %>
    <%= form.text_field :title, class:'form-control' %>
    <%= form.error_for :title, class:'text-danger' %>
  </div>

  <div class="field mb-4">
    <%= form.label :description, class:'mb-2' %>
    <%= form.text_area :description, class:'form-control' %>
    <%= form.error_for :description, class:'text-danger' %>
  </div>
  
  <div class="field">
    <%= form.label :header_image, class:'mb-2' %>
    <%= form.file_field :header_image, class:'form-control mb-4' %>
    <div class="mt-1">
    <% if post.header_image.present? %>
      <small>Current Image:</small>
      <%= image_tag(post. header_image, width: '100%') %>
    <% end %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class:'btn btn-primary w-100 mt-2' %>
  </div>
<% end %>
