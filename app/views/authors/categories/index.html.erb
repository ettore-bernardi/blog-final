<p id="notice"><%= notice %></p>
<div class="">
    <%= link_to 'Back to posts',posts_path, class:'btn btn-primary' %>
    <h1 class="text-center">Categories</h1>
  <div class="row justify-content-center">
    <div class="col-lg-9">
      <div class="border border-dark border-2 rounded">
        <table class="table table-striped table-light text-start mb-0">
          <thead>
            <tr>
              <th scope="col">Category Name</th>
              <th class="text-center" scope="col" colspan="3">Options</th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
              <tr class="">
                <th scope="row"><%= category.name %></th>
                <td class="text-center"><%= link_to 'Edit', edit_category_path(category), class:'btn btn-primary' %></td>
                <td class="text-center"><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?'}, class:'btn btn-danger' %></td>
              </tr>
            <% end %>
          </tbody>
          <tfoot>
            <tr class="text-center">
              <td><%= link_to 'New Category', new_category_path, class:'btn btn-primary' %></td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
  

</div>
